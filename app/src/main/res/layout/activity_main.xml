<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="84dp"
        android:layout_height="78dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:srcCompat="@drawable/manzana" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/imageView"
        android:layout_marginTop="25dp"

        android:layout_toRightOf="@id/imageView"
        android:text="Manzana verde"
        android:textColor="@color/verde"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_alignBaseline="@id/imageView"
        android:layout_marginBottom="10dp"
        android:text="Inicia sesion"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/verde"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_marginBottom="10dp"
        android:text="Con tu red social"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="40dp"
        android:layout_toStartOf="@+id/imageButton2"
        android:background="@drawable/facebook"
        app:srcCompat="@mipmap/ic_face_foreground" />

    
    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView3"
        android:layout_alignBaseline="@id/imageButton1"
        android:layout_marginStart="-10dp"
        android:layout_marginLeft="0dp"

        android:layout_marginTop="9dp"

        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/textView3"
        android:background="@drawable/bordes"
        app:srcCompat="@mipmap/ic_google_foreground" />

    <Button
        android:id="@+id/button"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageButton2"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:autoSizeTextType="uniform"

        android:backgroundTint="@color/black"
        android:drawableLeft="@mipmap/ic_apple_foreground"
        android:paddingRight="70dp"
        android:text="Continuar con apple"
        android:textSize="10sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button1"
        android:layout_width="372dp"
        android:layout_height="50dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/verde"
        android:text="Continua con tu celular"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="0dp"
        android:text="Con tu Correo"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Ingrese su correo electronico"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView7"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:hint="@string/ejemplo"

        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTextEmailAddress"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Constrasenia"
        android:textColor="@color/black"

        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView8"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:drawableEnd="@drawable/ic_eyes"
        android:ems="10"
        android:hint="@string/contrasenia"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button4"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editTextTextPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        android:backgroundTint="@color/verde"
        android:text="inicia sesion"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button4"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="No puedes iniciar sesion?"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textView9"
        android:text="olvide mi contrasenia"
        android:textColor="@color/verde"
        android:textSize="15sp"

        />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:text="Aun no tienes una cuenta"
        android:textSize="15sp"

        />

    <Button
        android:id="@+id/button5"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/verde"
        android:text="Registrate" />




</RelativeLayout>